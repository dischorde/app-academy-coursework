<% if request.persisted? %>
  <% action_url = cat_rental_request_url(request) %>
  <% submit_button_text = "Edit Cat Rental Request" %>
<% else %>
  <% action_url = cat_rental_requests_url %>
  <% submit_button_text = "Create Cat Rental Request" %>
<% end %>

<form action="<%= action_url %>" method="post">

  <% if request.persisted? %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="cat">Cat:</label>
  <select id="cat" name="request[cat_id]">
    <option selected disabled> -- Pick one! --</option>
    <% Cat.all.each do |cat| %>
    <option value="<%= cat.id %>" <%= 'selected' if request.cat_id == cat.id %>> <%= cat.name %></option>
    <% end %>
  </select><br>

  <label for="start_date">Start Date:</label>
  <input id="start_date" type="date" name="request[start_date]" value="<%= request.start_date %>" > <br>

  <label for="end_date">End Date:</label>
  <input id="end_date" type="date" name="request[end_date]" value="<%= request.end_date %>" > <br>


  <input type="submit" value="<%= submit_button_text %>">
</form>
