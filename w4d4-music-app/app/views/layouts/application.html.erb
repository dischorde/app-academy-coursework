<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:errors] %>
  <div>
    <ul>
    <% flash[:errors].each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
  <% end %>

  <h1>Music App</h1>
  <% if current_user %>
    <%= button_to "Log Out", session_url(current_user.id), method: :delete %>
  <% end %>

<%= yield %>
<footer>
  <%= yield :footer %>
  </footer>
</body>
</html>
